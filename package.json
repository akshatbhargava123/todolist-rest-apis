{
  "name": "todolist-backend",
  "version": "0.1.0",
  "description": "Todolist Application Backend which holds the REST apis",
  "main": "dist",
  "scripts": {
    "dev": "npm run docs && nodemon -w src --exec \"babel-node src --presets es2015,stage-0 && killall node\"",
    "build": "npm run docs && babel src -s -D -d dist --presets es2015,stage-0",
    "docs": "apidoc -i src/api -o docs/",
    "start": "node dist",
    "prestart": "npm run -s build",
    "test": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "author": "Akshat Bhargava <akshatbhargavadeepa@gmail.com>",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.4",
    "mongoose-unique-validator": "^2.0.1",
    "morgan": "^1.8.0",
    "resource-router-middleware": "^0.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.1.1",
    "nodemon": "^1.9.2",
    "apidoc": "^0.17.6"
  }
}
